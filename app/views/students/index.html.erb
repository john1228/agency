<div class="row">
  <div class="col-lg-12 top10 tdzty">
    <h3 class="poloklh4">学员信息</h3>

    <div class="panel panel-default top15">
      <table class="table table-hover txt-zt">
        <thead>
        <tr class="prito">
          <th class="text-center">头像</th>
          <th class="text-center">昵称</th>
          <th class="text-center">性别</th>
          <th class="text-center">年龄</th>
          <th class="text-center">联系电话</th>
          <th class="text-center">来源</th>
        </tr>
        </thead>
        <tbody >
        <%
           @users.each { |user|
        %>
            <tr>
              <td class="text-center tyeq"><%= image_tag(user.profile.avatar.thumb.url, class: 'img-circle  img-w') %></td>
              <td class="text-center tyeq"><%= user.profile.name %></td>
              <td class="text-center tyeq"><%= user.profile.gender.eql?(1) ? '女' : '男' %></td>
              <td class="text-center tyeq"><%= user.profile.birthday.strftime('%Y-%m-%d') rescue '' %></td>
              <td class="text-center tyeq"><%= truncate(user.mobile) %></td>
              <td class="text-center tyeq"><%=
                  if @orders.include?(user.id)
                    if @follows.include?(user.id)
                      '购买课程|关注'
                    else
                      '购买课程'
                    end
                  else
                    if @follows.include?(user.id)
                      '关注'
                    else
                      '未知'
                    end
                  end
              %></td>
            </tr>
        <% } %>
        </tbody>
      </table>
    </div>
    <div class="dataTables_paginate">
      <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>