<div class="panel  top20">
  <div class="panel-header">修改密码</div>
  <div class="panel-body">
    <%= form_for(change_password_path) do %>
        <% if @error.present? %>
            <div class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <%= @error %>
            </div>
        <% end %>
        <% if @success.present? %>
            <div class="alert alert-success" role="alert">
              <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
              <%= @success %>
            </div>
        <% end %>
        <div class="input-group group-width top20">
          <span class="input-group-addon">
            <samp class="alert-down">
              原密码
            </samp>
          </span>
          <%= password_field_tag(:password, '', class: 'form-control', placeholder: '请填写原密码') %>
        </div>
        <div class="input-group group-width top20">
          <span class="input-group-addon">
            <samp class="alert-down">
              新密码
            </samp>
          </span>
          <%= password_field_tag(:new_password, '', class: 'form-control', placeholder: '请输入8-14位新密码') %>
        </div>
        <div class="input-group group-width top20">
          <span class="input-group-addon">
            <samp class="alert-down">
              确认密码
            </samp>
          </span>
          <%= password_field_tag(:confirm_password, '', class: 'form-control', placeholder: '请再一次输入新密码') %>
        </div>
        <div class="top20">
          <button type="button" class="submit">确认</button>
        </div>
    <% end %>
  </div>
</div>