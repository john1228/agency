<div class="row">
  <div class="col-lg-12 top10 tdzty">
    <h3 class="poloklh4">修改密码</h3>

    <div class="top15 clearfix">
      <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title">修改密码</h3></div>
        <div class="panel-body">
          <div class="colmd3">
            <%= form_for(change_password_path) do %>
                <% if @error.present? %>
                    <div class="alert alert-danger alert-dismissable">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                      <%= @error %>
                    </div>
                <% end %>
                <% if @success.present? %>
                    <div class="alert alert-success" role="alert">
                      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                      <%= @success %>
                    </div>
                <% end %>
                <div class="form-section top15">
                  <label class="input-label">原密码</label>
                  <input name='password' class="input-text" type="password">
                </div>
                <div class="form-section top15">
                  <label class="input-label">新密码(8-16位)</label>
                  <input name='new_password' class="input-text" type="password">
                </div>
                <div class="form-section top15">
                  <label class="input-label">确认新密码(8-16位)</label>
                  <input name='confirm_password' class="input-text" type="password">
                </div>
                <div class="fygroup">
                  <button type="submit" class="submit ">确认</button>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>