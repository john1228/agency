<div class="row">
  <div class="col-lg-12 top10 tdzty">
    <h3 class="poloklh4">群发记录</h3>

    <div class="panel panel-default top15">
      <table class="table table-hover txt-zt">
        <thead>
        <tr class="prito">
          <th width="45%">收件组</th>
          <th width="45%">内容</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody class="pritbl">
        <% @mass_messages.each { |message| %>
            <tr>
              <td style="text-align: left"><%= (MassMessageGroup.where(id: message.user_id).map { |group| group.name }).join('|') %></td>
              <td><%= truncate(message.content) %></td>
              <td></td>
            </tr>
        <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>