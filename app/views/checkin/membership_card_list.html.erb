<%= form_tag(confirm_checkin_path(@checkin), method: :post) do %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="myModalLabel">签到确认</h4>
    </div>
    <div class="modal-body">
      <table class="table table-striped" id="datatable-editable">
        <thead>
        <tr class="table-header">
          <th></th>
          <th>会员卡名称</th>
          <th>卡类</th>
          <th>余额(元/次/有效期)</th>
          <th>扣费</th>
        </tr>
        </thead>
        <tbody>
        <% @cards.each do |card| %>
            <tr>
              <td><%= check_box_tag(:card_id, card.id) %></td>
              <td><%= card.name %></td>
              <td><%= card.card_type_i18n %></td>
              <td><%= card.value %></td>
              <td>
                <% if card.stored? %>
                    <div class="input-group">
                      <%= text_field_tag 'value[]', '', class: 'form-control', style: 'border-left: 1px solid #ccc' %>
                      <span class="input-group-addon">元</span>
                    </div>
                <% elsif card.measured? %>
                    <div class="input-group">
                      <%= text_field_tag 'value[]', '', class: 'form-control', style: 'border-left: 1px solid #ccc' %>
                      <span class="input-group-addon">次</span>
                    </div>
                <% elsif card.course? %>
                    <div class="input-group">
                      <%= text_field_tag 'value[]', '', class: 'form-control', style: 'border-left: 1px solid #ccc' %>
                      <span class="input-group-addon">节</span>
                    </div>
                <% end %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default"
              data-dismiss="modal">关闭
      </button>
      <button type="button" class="btn btn-primary">
        提交
      </button>
    </div>
<% end %>

