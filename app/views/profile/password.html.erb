<div class="row">
  <div class="col-lg-12 top10 tdzty">
    <h3 class="poloklh4">修改密码</h3>

    <div class="top15 clearfix">
      <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title">修改密码</h3></div>
        <div class="panel-body">
          <div class="colmd3">
            <%= form_tag(change_password_path, role: 'form') do %>
                <% if @error.present? %>
                    <div class="alert alert-danger" role="alert">
                      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                      <span class="sr-only">Error:</span>
                      <%= @error %>
                    </div>
                <% end %>
                <% if @success.present? %>
                    <div class="alert alert-success" role="alert">
                      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                      <span class="sr-only">Success:</span>
                      <%= @success %>
                    </div>
                <% end %>
                <div class="form-section top15">
                  <label class="input-label">原密码</label>
                  <input name='password' class="input-text" type="text">
                </div>
                <div class="form-section top15">
                  <label class="input-label">新密码</label>
                  <input name='new_password' class="input-text" type="text">
                </div>
                <div class="form-section top15">
                  <label class="input-label">确认新密码</label>
                  <input name='confirm_password' class="input-text" type="text">
                </div>
            <% end %>
            <div class="fygroup">
              <button type="button" class="btntn-lg ">确认</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>