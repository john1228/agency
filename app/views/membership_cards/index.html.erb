<div class="page-header clearfix">
  <div class="member-search pull-left member-type">
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1"><i class="icon">&#xe61b;</i></span>
      <%= search_field_tag :name, '', placeholder: "会员姓名/手机", class: "form-control" %>
    </div>
  </div>
  <%= link_to '<i class="icon">&#xe613;</i> 添加会员卡'.html_safe, new_membership_card_path, class: "new-member pull-right" %>
</div>
<div class="panel  top20">
  <div class="panel-header clearfix header-selector">
    <span class="pull-left">全部会员卡(<%= @query.result.count %>)</span>
    <%= search_form_for @query do |f| %>
        <p class="top10">
          <%= f.collection_select :service_id_eq, current_admin_user.all_services, :id, :name, {include_blank: "全部门店"}, class: "pull-right", onchange: "return $(this).closest('form').submit()" %>
          <%= f.collection_select :service_id_eq, current_admin_user.all_services, :id, :name, {include_blank: "全部门店"}, class: "pull-right", onchange: "return $(this).closest('form').submit()" %>
        </p>
    <% end %>
  </div>
  <div class="panel-body ">
    <%= render 'table' %>
    <div class="clearfix">
      <%= will_paginate @membership_cards, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>

