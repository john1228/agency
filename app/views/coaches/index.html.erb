<%= search_form_for @query do |f| %>
    <div class="page-header  clearfix">

      <div class="member-search pull-left member-type">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1"><i class="icon">&#xe61b;</i></span>
          <%= f.search_field :profile_name_or_profile_mobile_cont, placeholder: "私教姓名／手机号码", class: "form-control" %>
        </div>
      </div>
      <%= link_to "新建私教", new_coach_path, class: "new-btn pull-right" %>
      <%= link_to '搜索', '#', class: "detailed-Search pull-right", onclick: "return $(this).closest('form').submit()" %>
    </div>
    <div class="panel  top20">
      <div class="panel-header clearfix header-selector">
        <span class="pull-left">私教统计</span>

        <p class="top10">
          <%= f.collection_select :service_id_eq, current_admin_user.all_services, :id, :name, {include_blank: "全部门店"}, class: "pull-right selectpicker", onchange: "return $(this).closest('form').submit()" %>
        </p>
      </div>
<% end %>

<div class="panel-body">
  <div class="chart-surrounded">
    <%= render 'report' %>
  </div>
  <div>
    <%= render 'table' %>
  </div>
</div>
</div>

