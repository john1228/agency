<%= semantic_form_for @coach, html: {multipart: true} do |f| %>

    <h3 class="Content-h3"><%=edit_helper(@coach)%>私教</h3>
    <div class="panel">
      <div class="panel-body">
        <h4 class="clsize">基本资料</h4>
        <% if @coach.errors.present? %>
            <div class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <% @coach.errors.messages.values.each { |v| %>
                  <%= v %><br/>
              <% } %>
            </div>
        <% end %>

        <%= f.semantic_fields_for :profile do |p| %>
        <div class=" pull-right">
          <div class="portrait" data-url="<%=@coach.profile.avatar.url(:thumb) if @coach.profile.avatar.present? %>">

            <div class="place">
                  <span>
                    <i class=" icon"></i>
                  </span>
              <p>上传头像</p>
            </div>
            <div class="show"></div>
            <%= p.file_field :avatar,  class:"file_remove_format file_uploader" %>
          </div>
        </div>

        <div class="conte-text ">



          <div class="input-group conte-cteli ">
            <span class="input-group-addon" id="sizing-addon2"><samp class="alert-down">私教姓名</samp></span>

            <%= p.text_field :name, :class=>"form-control"%>
          </div>

          <div class="input-group conte-cteli top20">
            <span class="input-group-addon" id="sizing-addon2"><samp class="alert-down">生日</samp></span>
            <%= p.text_field :birthday, class: "form-control datepicker" %>
          </div>

          <div class="input-group conte-cteli top20">
            <span class="input-group-addon" id="sizing-addon2"><samp class="alert-down">性别</samp></span>
            <%= p.collection_select :gender, UserRegistration.genders.map {|key, value| [I18n.t("activerecord.attributes.gender.#{key}"), key] },:last, :first, class: "form-control" %>
          </div>

          <div class="input-group conte-cteli top20">
            <span class="input-group-addon" id="sizing-addon2"><samp class="alert-down">手机号码</samp></span>
            <%= p.text_field :mobile, class: "form-control" %>
          </div>
          <div class="input-group conte-cteli top20">
            <span class="input-group-addon" id="sizing-addon2"><samp class="alert-down">私教简介</samp></span>
            <%= p.text_field :signature, class: "form-control" %>
          </div>

          <div class="input-group conte-cteli top20">
            <span class="input-group-addon" id="sizing-addon2"><samp class="alert-down">所属门店</samp></span>
            <%= f.collection_select :service_id, current_user.all_services,:id,:name,{},class:"form-control"%>
          </div>

          <div class="input-group conte-cteli top20">
            <span class="input-group-addon" id="sizing-addon2"><samp class="alert-down">健身服务</samp></span>
            <%= p.select(:hobby, INTERESTS['items'].map { |item| [item['name'], item['id']] }, {include_hidden: false}, {multiple: true}) %>
          </div>

          <div class="input-group conte-cteli top20">
            <span class="input-group-addon" id="sizing-addon2"><samp class="alert-down">登录用户名</samp></span>
            <%= f.text_field :mobile, class: "form-control", placeholder: "请输入手机号" %>
          </div>

          <div class="input-group conte-cteli top20">
            <span class="input-group-addon" id="sizing-addon2"><samp class="alert-down">登录密码</samp></span>
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
        <% end %>






        <div class="fygroup top20">
          <button type="submit" class="btntn-lg ">确认</button>
        </div>
      </div>

    </div>
<% end %>

