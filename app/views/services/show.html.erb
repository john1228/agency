

  <div class="panel panel-default">
    <div class="panel-heading">
      <%= link_to '<i class="icon">&#xe615;</i>编辑'.html_safe, edit_service_path(@service), class:"heading-top-samp pull-right"%>
      <h4 class="panel-title">门店详情</h4>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-6">
          <ul class="heading-ul top10">
            <h3 class="heading-ti"><%= @service.profile.name%></h3>
            <li><%=@service.profile.hobby_string%></li>
            <li class="heading-samp"><samp class="heading-sa-a"><i class="icon">&#xe62a;</i><%=@service.score%></samp><samp class="heading-sa-b"><i class="icon">&#xe61f;</i><%=@service.mxid%></samp></li>
            <p class="top10"></p>
            <li class="heading-ul-li"><i class="icon">&#xe629;</i><%=@service.profile.business_hour_start%>-<%=@service.profile.business_hour_end%></li>
            <li class="heading-ul-li"><i class="icon">&#xe626;</i><%=@service.profile.mobile%></li>
            <li class="heading-ul-li"><i class="icon">&#xe628;</i><%=link_to "www.e-mxing/#{@service.mxid}","http://www.e-mxing/#{@service.mxid}"%></li>
            <li class="heading-ul-li"> <i class="icon">&#xe627;</i><%=@service.profile.address%></li>
          </ul>
        </div>
        <div class="col-xs-6">
          <div class="heading-img pull-right"><%=image_tag "1.jpg", class:"img-circle  img-responsive"%></div>

        </div>

      </div>
      <div class="text-muted"><%=@service.profile.signature%></div>




      <div class="album album-bj" id="album">
        <div class="album-image-md" id="album-image-md">
          <p class="album-image-bd"><%image_src=@service.photos[0].photo.url rescue nil%><%=image_tag image_src, class:"album-image", id:"album-image" %></p>
          <ul class="album-image-nav hide" id="album-image-nav">
            <li class="album-image-nav-left-block" id="album-image-nav-left-block"><a href="#prev-image" class="album-image-btn-prev" id="album-image-btn-prev">‹</a></li>
            <li class="album-image-nav-right-block" id="album-image-nav-right-block"><a href="#next-image" class="album-image-btn-next" id="album-image-btn-next">›</a></li>
          </ul>
          <p class="album-image-loading-overlay hide" id="album-image-loading-overlay"><%= image_tag "loading.gif", alt:"loading...", width:"100", height:"100" %></p>
        </div>
        <div class="album-carousel" id="album-carousel">
          <a href="#prev-group" class="album-carousel-btn-prev" id="album-carousel-btn-prev">‹</a>
          <div class="album-carousel-zone" id="album-carousel-zone">
            <ul class="album-carousel-list" id="album-carousel-list">
              <% @service.photos.each do |photo| %>
                  <li class="album-carousel-thumb"><%=  image_tag(photo.photo.url) %></li>
              <%end%>




            </ul>
          </div>
          <a href="#next-group" class="album-carousel-btn-next" id="album-carousel-btn-next">›</a>
        </div>

      </div>






    </div>
  </div>
<script>
    new jQuery.Album();
</script>

